@{
	var reminders = ViewData["Reminders"] as List<erecruiter.Reminder>;
}

<link rel="stylesheet" href="~/css/layouts.css"/>
<link rel="stylesheet" href="~/css/index.css"/>
<div class="page">
	@await Html.PartialAsync("_Menu")
        @if (reminders.Count!=0)
        {
			<div class="reminders">
				<b>Reminders exist!</b>
			</div> 
		}
		else
		{
			<div class="reminders_empty">
				<p class="reminders_empty_title">Reminders</p>
				<p class="reminders_empty_text">You do not have any	active reminders</p>
				<input
					type="button"
					value="Add reminder"
					class="button_text"
					onclick="location.href='/Home/AddReminder'"/>
			</div>
		}
    @await Html.PartialAsync("_Footer")
</div>
