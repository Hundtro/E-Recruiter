@{
	var reminders = ViewData["Reminders"] as List<erecruiter.Reminder>;
}

<link rel="stylesheet" href="~/css/layouts.css"/>
<link rel="stylesheet" href="~/css/index.css"/>
<div class="page">
    <div>
        <ul class="menu">
            <li><a href="/Home">Home</a></li>
            <li><a href="#new rec">New recruit process</a></li>
            <li><a href="#news">Manage recruitment</a></li>
            <li><a href="#contact">New employee</a></li>
            <li><a href="#about">Find employee</a></li>
            <li><a href="#about">Contact employee</a></li>
            <li><a href="/">About</a></li>
        </ul>
    </div>
        @if (reminders.Count!=0)
        {
			<div class="reminders">
				<b>Reminders exist!</b>
			</div> 
		}
		else
		{
			<div class="reminders_empty">
				<p class="reminders_empty_title">Reminders</p>
				<p class="reminders_empty_text">You do not have any	active reminders</p>
				<input
					type="button"
					value="Add reminder"
					class="button_text"
					onclick="location.href='/Home/AddRemidner'"/>
			</div>
		}
    @await Html.PartialAsync("_Footer")
</div>
