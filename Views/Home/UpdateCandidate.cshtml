@model erecruiter.Candidate;
@{
    var candidate = ViewData["Candidate"] as erecruiter.Candidate;
}

<link rel="stylesheet" href="~/css/update-candidate.css"/>
<div class="content">
    @await Html.PartialAsync("_Menu")
    <div class="title">
        <p>Update candidate</p>
        <hr>
    </div>
	<div class="update-candidate">
        <form action="/UpdateCandidate" enctype="multipart/form-data" method="post">
            <input type="hidden" name="Id" value="@candidate.Id">
            <table class="params-table">
                <tr>
                    <td><label for="Name">Name</label></td>
                    <td><input class="input-param" type="text" name="Name" value="@candidate.Name"></td>
                    <td><label for="WantedSalary">Wanted salary</label></td>
                    <td><input class="input-param" type="text" name="WantedSalary" value="@candidate.WantedSalary"></td>
                </tr>
                <tr>
                    <td><label for="Surname">Surname</label></td>
                    <td><input class="input-param" type="text" name="Surname" value="@candidate.Surname"></td>
                    <td><label for="HomeOffice">Home office</label></td>
                    @if (candidate.HomeOffice.Equals("true"))
                    {
                    <td><input class="check-box" type="checkbox" name="HomeOffice" checked></td>
                    }
                    else
                    {
                    <td><input class="check-box" type="checkbox" name="HomeOffice"></td>
                    }
                </tr>
                <tr>
                    <td><label for="BirthDate">BirthDate</label></td>
                    <td><input class="input-param" type="text" name="BirthDate" value="@candidate.BirthDate"></td>
                    <td><label for="ExWorker">Exworker</label></td>
                    @if (candidate.ExWorker.Equals("true"))
                    {
                    <td><input class="check-box" type="checkbox" name="ExWorker" checked></td>
                    }
                    else
                    {
                    <td><input class="check-box" type="checkbox" name="ExWorker"></td>
                    }
                </tr>
                <tr>
                    <td><label for="Gender">Gender</label></td>
                    <td>
                       <select name="Gender">
                           @if (candidate.Gender.Equals("male"))
                           {
                           <option value="male" selected>Male</option>
                           <option value="female">Female</option>
                           }
                           else
                           {
                           <option value="female" selected>Female</option>
                           <option value="male">Male</option>
                           }
                       </select>
                    </td>
                    <td><label for="Photo">Photo</label></td>
                    <td><input class="input-param" type="file" name="Photo"></td>
                </tr>
                <tr>
                    <td><label for="Email">Email</label></td>
                    <td><input class="input-param" type="text" name="Email" value="@candidate.Email"></td>
                    <td><label for="CVFile">CVFile</label></td>
                    <td><input class="input-param" type="file" name="CVFile"></td>
                </tr>
                <tr>
                    <td><label for="MobilePhone">Mobile phone</label></td>
                    <td><input class="input-param" type="text" name="MobilePhone" value="@candidate.MobilePhone"></td>
                </tr>
            </table>
            <br>
            <input class="button button-update" type="submit" value="Update candidate">
        </form>
    </div>
    @await Html.PartialAsync("_Footer")
</div>
